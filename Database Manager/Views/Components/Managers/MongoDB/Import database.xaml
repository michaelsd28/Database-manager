<UserControl
    x:Class="Database_Manager.Views.Components.Managers.MongoDB.Import_database"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Database_Manager.Views.Components.Managers.MongoDB"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
RequestedTheme="Dark"
      Height="300"
    Width="350"
    >

    <Grid>
        <StackPanel   Background="#181818"  CornerRadius="10" Margin="20" Orientation="Vertical" Padding="10">

            <TextBlock Margin="10" Text="Import collection" />
            <TextBox x:Name="TNameDB" Margin="10"  PlaceholderText="Database Name"/>
            <TextBox Margin="10" x:Name="TCollectionName"  PlaceholderText="Collection name"/>

            <StackPanel Margin="20" Orientation="Horizontal" HorizontalAlignment="Center">

                <Button Click="ImportButton" Margin="20,0,20,0" Content="Import file" Background="#06380B"/>
                <Button  Click="CancelButton" Margin="20,0,20,0" Content="Cancel"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</UserControl>
