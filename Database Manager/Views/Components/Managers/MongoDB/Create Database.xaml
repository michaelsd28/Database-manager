<UserControl
    x:Class="Database_Manager.Views.Components.Managers.MongoDB.Create_Database"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Database_Manager.Views.Components.Managers.MongoDB"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
RequestedTheme="Dark"
    
    Height="300"
    Width="350"
    
    >

    <Grid>
        <StackPanel   Background="#181818"  CornerRadius="10" Margin="20" Orientation="Vertical">

            <TextBlock Margin="10" Text="Database Name"/>
            <TextBox x:Name="TNameDB" Margin="10"  PlaceholderText="Name"/>

            <TextBlock Margin="10"  Text="Collection Name"/>
            <TextBox Margin="10" x:Name="TCollectionName"  PlaceholderText="Collection name"/>

            <StackPanel Margin="20" Orientation="Horizontal" HorizontalAlignment="Center">

                <Button Click="CreateButton" Margin="20,0,20,0" Content="Create" Background="#06380B"/>
                <Button Click="CancelButton" Margin="20,0,20,0" Content="Cancel"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</UserControl>
