<UserControl
    x:Class="Database_Manager.Views.Components.Managers.SQL.tree.Table_button"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Database_Manager.Views.Components.Managers.SQL.tree"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="Dark"
    x:Name="BTableRoot"
Margin="0,0,0,10"

>

    <RelativePanel>

        <Button MinWidth="130" Margin="0,0,20,0" RelativePanel.AlignLeftWithPanel="True"  Click="BTable_Click">
            <StackPanel Orientation="Horizontal" >
                <Image Margin="0,0,5,0" Source="/Assets\Managers\SQL\sql table.png" Height="15"/>
                <TextBlock   TextTrimming="CharacterEllipsis" 
                             Text="{Binding TableName,ElementName=BTableRoot}"   
                             ToolTipService.ToolTip="{Binding TableName,ElementName=BTableRoot}"   
                             MaxWidth="90"  VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <Button Padding="5,3,5,6" Margin="20,0,0,0" 
                RelativePanel.AlignRightWithPanel="True" 
                RelativePanel.AlignVerticalCenterWithPanel="True" 
                Content="-"
                />


    </RelativePanel>
</UserControl>
