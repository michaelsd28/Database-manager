<Page x:Name="page"
    x:Class="Database_Manager.Views.Managers.MongoDB_Manager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Windows10version1903="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 8)"
    xmlns:mongodb="using:Database_Manager.Views.Components.Managers.MongoDB"
    xmlns:components="using:Database_Manager.Views.Components" 
      xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls" 
      xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    RequestedTheme="Dark" 
  
    >

    <Page.Resources>


        <ResourceDictionary>
            <AcrylicBrush 
                x:Key="bottomGrid"
                        BackgroundSource="HostBackdrop"
                              TintColor="#041400"
                              TintOpacity="0.4"
                              Windows10version1903:TintLuminosityOpacity="1"
                              FallbackColor="Gray"
                />
        </ResourceDictionary>
    </Page.Resources>

    <Grid >

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup">
                <VisualState x:Name="SmallState">
                    <VisualState.Setters>
                        <Setter Target="grid.(Grid.Column)" Value="0"/>
                        <Setter Target="wrapPanel.(FrameworkElement.Margin)">
                            <Setter.Value>
                                <Thickness>0,10,0,0</Thickness>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="page_Controller.(FrameworkElement.Margin)">
                            <Setter.Value>
                                <Thickness>0,0,0,5</Thickness>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="documents_Container.(FrameworkElement.Margin)">
                            <Setter.Value>
                                <Thickness>0,-20,0,-5</Thickness>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="MediumState">
                    <VisualState.Setters>
                        <Setter Target="grid.(Grid.Column)" Value="1"/>

                        <Setter Target="button.(UIElement.Visibility)" Value="Collapsed"/>
                        <Setter Target="documents_Container.(FrameworkElement.Margin)">
                            <Setter.Value>
                                <Thickness>15,-20,0,-5</Thickness>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="page_Controller.(FrameworkElement.Margin)">
                            <Setter.Value>
                                <Thickness>220,0,0,5</Thickness>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="755"/>
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="LargeState"/>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.Background>
            <AcrylicBrush    
                              BackgroundSource="HostBackdrop"
                              TintColor="#051F0B"
                              TintOpacity="0.5"
                              Windows10version1903:TintLuminosityOpacity="1"
                              FallbackColor="#111111"
                             />

        </Grid.Background>



        <Grid.RowDefinitions>
            <RowDefinition MinHeight="33" Height="33" MaxHeight="33"/>
            <RowDefinition Height="19*"/>
            <RowDefinition  MinHeight="40" Height="35"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition  MinWidth="240" MaxWidth="260" Width="24*" />
            <ColumnDefinition    Width="101*"/>
        </Grid.ColumnDefinitions>



        <!-- Title Background Color -->
        <Grid 
            Grid.Row="0"
            Background="Black"
            Grid.ColumnSpan="2"
            Canvas.ZIndex="10"
              >
                
            <Grid x:Name="AppTitleBar" Background="Transparent">
                <!-- Width of the padding columns is set in LayoutMetricsChanged handler. -->
                <!-- Using padding columns instead of Margin ensures that the background
         paints the area under the caption control buttons (for transparent buttons). -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="LeftPaddingColumn" Width="0"/>
                    <ColumnDefinition/>
                    <ColumnDefinition x:Name="RightPaddingColumn" Width="0"/>
                </Grid.ColumnDefinitions>
                <Image Source="Assets/WindowIcon.png" 
           Grid.Column="1"
           HorizontalAlignment="Left"
           Width="16" Height="16"
           Margin="8,0,0,0"/>

            </Grid>

            <RelativePanel >
        
                <Button  
                  Padding="7,0,10,0"
                    Click="BackButton_Click" 
                    x:Name="BackButton"  Margin="10,0,0,0" Height="25"  
                    RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True">
                    <Image Source="/Assets\Mainpage\back button.png"  Height="15"  />
                </Button>

                <Button x:Name="button" Click="ExpandLeftBar" Height="30" Background="Black" RelativePanel.RightOf="BackButton" RelativePanel.AlignVerticalCenterWithPanel="True"  Margin="15,0,0,0">

                    <Image  Source="/Assets\Managers\MongoDB\expand left menu.png" Margin="0,-3,0,-3" Width="23" />
                </Button>


                <Image RelativePanel.LeftOf="MongoDBTitleBar"  Source="/Assets\Mainpage\MongoDB Badge.png" Height="20" Margin="10,10,0,0"  HorizontalAlignment="Center"/>
                <TextBlock Foreground="#318025" FontSize="16"  FontFamily="Itim" x:Name="MongoDBTitleBar" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Text="MongoDB"/>
            </RelativePanel>


        </Grid>




        <Popup  x:FieldModifier="Public" Canvas.ZIndex="5"  Margin="5"  Grid.Row="1"   IsOpen="True" x:Name="LeftPopUp"   >


            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PaneThemeTransition Edge="Left"/>
                </TransitionCollection>
            </Popup.ChildTransitions>



            <StackPanel  
                CornerRadius="10" 
                     Background="Black" 
                         Grid.RowSpan="3" Grid.ColumnSpan="3" 
                          x:Name="LeftSidePanel"  Orientation="Vertical" Grid.Row="1" 
                        Padding="10"
                        >
                <TextBlock HorizontalAlignment="Center"  Margin="0,20,0,0"   FontSize="16" VerticalAlignment="Center">Database/<LineBreak/>Collection</TextBlock>

                <StackPanel   Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,40">
                    <Button Click="AddButton"  Margin="5" >
                        <Image Source="/Assets\Managers\MongoDB\add button.png" Height="20" />
                    </Button>
                    
                    
                    <Button Click="ImportButton"  Margin="5" >
                        <Image Source="/Assets\Managers\MongoDB\import data.png" Height="20" />
                    </Button>

                    <Button  Click="ExportButton" Margin="5" >
                        <Image Source="/Assets\Managers\MongoDB\export data.png" Height="20" />
                    </Button>

                </StackPanel>



                <Grid BorderBrush="DarkGray"  BorderThickness="0,2,0,0" Margin="0,-30,0,0" x:Name="LeftBar_GridContainer"  >
                    <ScrollViewer  Padding="0,0,15,0"   VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible">
                        <StackPanel x:Name="DatabaseStackPanel"  Orientation="Vertical" x:FieldModifier="Public">
                            
                            
                            <!--
                                                        <mongodb:Database_Treeview myTextHeader="Hola 01 01" CollectionText=" klk 36369" HorizontalAlignment="Center"/>
                            
                            
                            <mongodb:Database_Treeview HorizontalAlignment="Center"/>
                            <mongodb:Database_Treeview HorizontalAlignment="Center"/>
                            <mongodb:Database_Treeview HorizontalAlignment="Center"/>
                            
                            -->


                        </StackPanel>
                    </ScrollViewer>
                </Grid>


            </StackPanel>


        </Popup>




        <!--*********       right panel  controls       *********-->

        <Grid x:Name="grid"

            Grid.Row="1"
            Grid.Column="1" 
            Grid.ColumnSpan="2"
     
            BorderThickness="5"
              

                        >

            <controls:WrapPanel x:Name="wrapPanel"  Margin="30,10,0,0" >

                <StackPanel  Margin="0,10,0,10" Orientation="Horizontal" >
                    <TextBox 
                        Margin="5,0,5,0" 
                        Canvas.ZIndex="5"  x:Name="TextBoxFilter" Height="20" Width="190" 
                        PlaceholderText="Search: {&quot;name&quot;:&quot;value&quot;}"
                        IsSpellCheckEnabled="False"
                        TextChanged="TextBoxFilter_TextChanged"
                        />
                    <!-- -->
                    
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="8,10,0,10" >
                    <TextBlock Text="View as"  VerticalAlignment="Center" />
                    <Button Click="BViewAsJson" Padding="3,1,3,3" Margin="5,0,5,0" ToolTipService.ToolTip="JSON" >📃</Button>
                    <Button Click="BViewAsGrid" Padding="3,1,3,3" Margin="5,0,5,0" ToolTipService.ToolTip="Datagrid" >📅</Button>
                   
          
                </StackPanel>


                <StackPanel  Margin="0,0,0,0" Orientation="Horizontal">
                    <Button Margin="5,0,5,0"  Content="Refresh"/>
                    <Button  Click="Insert_Button"  Margin="5,0,5,0" Content="Insert"/>
                </StackPanel>

            </controls:WrapPanel>


            <mongodb:Documents_Container x:Name="documents_Container" Margin="0,-20,0,20"  />



            <Popup 
                IsLightDismissEnabled="True"
                LightDismissOverlayMode="On"
                    HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0,0,350,300"
                IsOpen="False" x:Name="CreateMyDB_POPUP" x:FieldModifier="Public">
                <mongodb:Create_Database  />
            </Popup>

            <Popup 
                IsLightDismissEnabled="True"
                LightDismissOverlayMode="On"
                    HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0,0,350,300"
                IsOpen="False" x:Name="ImportDB_POPUP" 
                x:FieldModifier="Public">
                <mongodb:Import_database  />
            </Popup>
            <!-- <mongodb:Create_Database Visibility="Collapsed" x:Name="CreateDatabase_Grid" x:FieldModifier="Public"/>--> 

            <!--<mongodb:Insert_Document />-->
            <Grid
 
                 Visibility="Collapsed"
                 x:Name="InsertDocument_POPUP"  
                 Grid.Row="1" 
                 HorizontalAlignment="Center" 
                 VerticalAlignment="Center"
                 x:FieldModifier="Public"
                
                
                >
                

         
                    <mongodb:Insert_Document />

           
            </Grid>








        </Grid>






        <!--*********       right panel  controls       *********-->








        <!--*********       bottom panel  controls       *********-->

        <Grid Padding="0" 

              Canvas.ZIndex="3" 
              Grid.Row="2"   
              Grid.Column="0"  
              Grid.ColumnSpan="2" 
              Background="{ThemeResource bottomGrid}"  VerticalAlignment="Bottom" Height="40">

            <components:IconButton 
                ButtonText="Delete" 
                ImageIcon="/Assets\Managers\MongoDB\delete database.png" 
                ButtonPadding="5,3,5,3"
                ForegroundText="White"
                ButtonBackground="#181818" 
                Margin="13,0,0,-1" 
                Height="36" 
                VerticalAlignment="Bottom"
                ImageMargin="0,0,5,0"
                                   />

            <mongodb:Page_Controller  x:Name="page_Controller" Margin="200,0,0,55" Height="28" VerticalAlignment="Bottom"/>
        </Grid>


    </Grid>
</Page>
